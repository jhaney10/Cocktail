<div class="row">
    <div class="col s6">
        {{!-- <div class="chip">
            <img class="activator responsive-img" src="/images/{{cocktail.drinkThumbId}}">
        </div> --}}
        <img class="circle responsive-img" src="/images/{{cocktail.drinkThumbId}}">
    </div>
    <div class="col s6">
        <h3>{{cocktail.drinkName}}</h3>
        <h5>Ingredients</h5>
        <ul>
        {{#each cocktail.content}}
            <li>{{ingredient}}  {{measurement}}</li>
        {{/each}}
        </ul>

        <h5>Instructions</h5>
        <p>{{cocktail.instructions}}</p>
    </div>
</div>
<div class="row">
    <div class="col s3">
        <a href="/cocktails/edit/{{cocktail._id}}" class="btn waves-effect waves-light">Edit</a>
    </div>
    <div class="col s3">
        <button class="btn waves-effect waves-light" type="submit" name="action">Delete
        </button>
    </div>
</div>