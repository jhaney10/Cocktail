<h3>Add Cocktail</h3>
<div class="row">
  <form action="/cocktails" method="POST" class="col s12" enctype="multipart/form-data">
    <div class="row">
      <div class="input-field col s12 ">
        <input id="drinkName" type="text" name="drinkName">
        <label for="drinkName">Cocktail Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
      <select name="status" id="status">
        <option value="public" selected>Public</option>
        <option value="private">Private</option>
      </select>
      <label for="status">Status</label>
    </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <textarea id="instructions" class="materialize-textarea" name="instructions"></textarea>
        <label for="instructions">Instructions</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="ingredient1" type="text" class="" name="content[0][ingredient]">
        <label for="ingredient1">Ingredient 1</label>
      </div>
      <div class="input-field col s6">
        <input id="measurement1" type="text" class="" name="content[0][measurement]">
        <label for="measurement1">Measurement 1</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="ingredient2" type="text" class="" name="content[1][ingredient]">
        <label for="ingredient2">Ingredient 2</label>
      </div>
      <div class="input-field col s6">
        <input id="measurement2" type="text" class="" name="content[1][measurement]">
        <label for="measurement2">Measurement 2</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="ingredient3" type="text" class="" name="content[2][ingredient]">
        <label for="ingredient3">Ingredient 3</label>
      </div>
      <div class="input-field col s6">
        <input id="measurement3" type="text" class="" name="content[2][measurement]">
        <label for="measurement3">Measurement 3</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="ingredient4" type="text" class="" name="content[3][ingredient]">
        <label for="ingredient4">Ingredient 4</label>
      </div>
      <div class="input-field col s6">
        <input id="measurement4" type="text" class="" name="content[3][measurement]">
        <label for="measurement4">Measurement 4</label>
      </div>
    </div>
    <div class="row">
      <div class="file-field input-field">
        <div class="btn">
          <span>Upload Cocktail Image</span>
          <input type="file" name="drinkThumbId">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
    </div>
    <div class="row">
      <input type="submit" value="Save" class="btn">
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>